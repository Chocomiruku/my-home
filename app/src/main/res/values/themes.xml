<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyHome" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/violet_300</item>
        <item name="colorSecondaryVariant">@color/violet_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_100</item>
        <!-- Button style. -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <!-- Tool bar style. -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <!-- Bottom navigation style. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Text input style. -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <!-- Switch style. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <!-- Checkbox style. -->
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <!-- RadioButton style. -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
    </style>
</resources>